<% layout("/layouts/boilerplate") %>
<body>

        <div class="row">
            <div class="col-8 offset-2">
                  <h2 class="major-headings">edit listing</h2> <br>
        <form  method="post" action="/listings/<%= list && list._id ? list._id : 'invalid-id' %>?_method=PATCH" novalidate  class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">   
                 <label for="title" class="form-label">title</lAbel> 
                 <input type="text" name="listing[title]" class="form-control"  value="<%= list.title%>" required>
                  <div class="invalid-feedback">please enter a valid title</div>
            </div>
           <div  class="mb-3">
                    <label for="description" class="form-label">description</label> 
                    <textarea name="listing[description]"  rows="5" cols="20" class="form-control" required ><%= list.description%></textarea>
                     <div class="invalid-feedback">please enter a valid description</div>
           </div>

           <div>
                 original listing image <br>
                   <img src="<%=originalurl%>" alt=""  style="width: 150px; height: 100px;">
           </div>
            <div  class="mb-3">
             <label for="image" class="form-label"> upload new image</label> 
              <input type="file" name="image"  class="form-control" >
           </div>
           <div class="row">
              <div class="mb-3 col-md-4">
                   <label for="price" class="form-label">price</label> 
                   <input type="text" name="listing[price]"  class="form-control"  value="<%= list.price%>" required>
                    <div class="invalid-feedback">please enter a valid price</div>
            </div>
            
             <div  class="mb-3 col-md-8">
             <label for="country" class="form-label">country</label> 
              <input type="text" name="listing[country]"  class="form-control"  value="<%= list.country%>" required>
                <div class="invalid-feedback">please enter a valid country</div>
           </div>
           </div>
          
            <div  class="mb-3">
                   <label for="location" class="form-label">location</label> 
                   <input type="text" name="listing[location]"  class="form-control"  value="<%= list.location%>" required>
                    <div class="invalid-feedback">please enter a valid location</div>
            </div>
           <br>
      
                  <button class="btn btn-dark edit">edit</button>
                  <br><br>
        </form>
        </div>
        </div>
         

       
</body>
